@model WebForum.Models.ViewModels.UserProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

<h2>@Model.UserName's Profile</h2>

<div class="form-group">
    <label>Email:</label>
    <p>@Model.Email</p>
</div>
<div class="form-group">
    <label>Gender:</label>
    <p>@Model.Gender</p>
</div>
<div class="form-group">
    <label>Avatar:</label>
    <img src="@Model.AvatarUrl" alt="Avatar" style="width:100px;height:100px;" />
</div>
<div class="form-group">
    <label>Description:</label>
    <p>@Model.Description</p>
</div>
<div class="form-group">
    <label>Role:</label>
    <p>@Model.Role</p>
</div>

@if (User.Identity.Name == Model.UserName)
{
    <a class="btn btn-primary" href="@Url.Action("EditProfile", "Account")">Edit Profile</a>
}
